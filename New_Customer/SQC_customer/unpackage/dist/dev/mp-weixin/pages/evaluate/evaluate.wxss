
.manner {
	position: absolute;
	right: 50rpx;
	bottom: 14rpx;
	color: #83cbac;
	font-size: 28rpx;
}
.hlsDesc > view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	color: #999;
}
.left {
	width: 200rpx;
	color: #83cbac;
}
.richText {
	padding: 30rpx 50rpx;
	/* min-height: 50%; */
}
.richText textarea {
	border: 1px solid #f5f5f5;
	border-radius: 4rpx;
	width: 100%;
	margin: 20rpx 0;
	height: 136rpx;
}
.richText .borderNone {
	border: none;
}
.btn {
	color: white !important;
	background-color: #83cbac !important;
	margin: 0 50rpx 20rpx;
	height: 100rpx;
	line-height: 100rpx;
	border: none;
	/* position: sticky; 
	 bottom: 0; */
}
.eva-question-title {
	/* margin-bottom: 15upx; */
	font-size: 28rpx;
}
.eva-question {
	position: relative;
	padding: 20rpx 50rpx;
	text-align: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	/* flex-direction: column; */
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.uni-rate {
	margin-left: -60rpx;
}
.eva-title {
	color: #83cbac;
	text-align: center;
	margin: 30rpx 0;
}
.eva-title text {
	position: relative;
}
.eva-title text::before,
.eva-title text::after {
	content: '';
	position: absolute;
	width: 50rpx;
	height: 2rpx;
	top: 50%;
	background-color: #83cbac;
}
.eva-title text::before {
	left: -60rpx;
}
.eva-title text::after {
	right: -60rpx;
}
.avatar {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 30rpx 20rpx;
	border-bottom: 1px solid #f5f5f5;
}
.avatar image {
	width: 150rpx;
	height: 150rpx;
	border-radius: 1000rpx;
}
.avatar .logo,
.avatar .hlsDesc {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.avatar .logo {
	-webkit-box-flex: 4;
	-webkit-flex: 4;
	        flex: 4;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.avatar .hlsDesc {
	-webkit-box-flex: 7;
	-webkit-flex: 7;
	        flex: 7;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}

